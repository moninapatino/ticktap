<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <!-- Status Bar Icons -->
    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:contentDescription="Profile"
        android:focusable="true"
        android:src="@drawable/profile_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.891"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="15dp"
        android:layout_height="17dp"
        android:src="@drawable/battery_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.959"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="16dp"
        android:layout_height="17dp"
        android:src="@drawable/wifi_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.901"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="42dp"
        android:layout_height="19dp"
        android:fontFamily="sans-serif"
        android:text="11:59"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="16dp"
        android:layout_height="17dp"
        android:src="@drawable/cellular_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <TextView
        android:id="@+id/appname_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="TickTap"
        android:textColor="#702963"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.093" />


    <!-- START: SCROLL VIEW CONTAINER (using NestedScrollView) -->


    <!-- Footer Navigation Bar (fixed at bottom) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintBottom_toTopOf="@id/footer_layout"
        app:layout_constraintTop_toBottomOf="@id/appname_text"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="58dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="120dp"> <!-- CRITICAL FIX: Added bottom padding to allow content to scroll above the fixed footer -->

            <!-- Greeting Card (formerly constrained using bias, now has margin) -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/greeting_card"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_card"
                android:padding="16dp">

                <!-- Greeting Text -->
                <TextView
                    android:id="@+id/greeting_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good Morning,"
                    android:textColor="#F7F7F7"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Name -->
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Juan Dela Cruz"
                    android:textColor="#F7F7F7"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/greeting_text" />

                <!-- Weather Icon -->
                <ImageView
                    android:id="@+id/weather_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/weather_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Deadline header -->

            <TextView
                android:id="@+id/deadline_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Upcoming Deadlines"
                android:textColor="#702963"
                android:textSize="20sp" />

            <!-- Deadline 1: Project X Presentation -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/deadline1_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:paddingTop="12dp">

                <ImageView
                    android:id="@+id/alarm_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:clickable="true"
                    android:contentDescription="Alarm"
                    android:focusable="true"
                    android:src="@drawable/alarm_logo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/alarm_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/poppins"
                    android:text="Project X Presentation"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@id/alarm_icon"
                    app:layout_constraintTop_toTopOf="@id/alarm_icon" />

                <TextView
                    android:id="@+id/alarm_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Due in 1 hr 31 mins 12 secs"
                    android:textColor="#FC4949"
                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="@id/alarm_text"
                    app:layout_constraintTop_toBottomOf="@id/alarm_text" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/gradient_line"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/alarm_text2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Deadline 2: Marketing Plan Submission -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/deadline2_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:paddingTop="12dp">

                <ImageView
                    android:id="@+id/calendar1_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:clickable="true"
                    android:contentDescription="Calendar"
                    android:focusable="true"
                    android:src="@drawable/calendar_logo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/calendar1_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/poppins"
                    android:text="Marketing Plan Submission"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@id/calendar1_icon"
                    app:layout_constraintTop_toTopOf="@id/calendar1_icon" />

                <TextView
                    android:id="@+id/calendar1_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Due in 8 hrs 22 mins 10 secs"
                    android:textColor="#FC4949"
                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="@id/calendar1_text"
                    app:layout_constraintTop_toBottomOf="@id/calendar1_text" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/gradient_line"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/calendar1_text2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Deadline 3: UI Design Review -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/deadline3_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:paddingTop="12dp">

                <ImageView
                    android:id="@+id/calendar2_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:clickable="true"
                    android:contentDescription="Calendar"
                    android:focusable="true"
                    android:src="@drawable/calendar_logo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/calendar2_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/poppins"
                    android:text="UI Design Review"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@id/calendar2_icon"
                    app:layout_constraintTop_toTopOf="@id/calendar2_icon" />

                <TextView
                    android:id="@+id/calendar2_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Due in 2 days"
                    android:textColor="#FC4949"
                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="@id/calendar2_text"
                    app:layout_constraintTop_toBottomOf="@id/calendar2_text" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/gradient_line"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/calendar2_text2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Today's Task Header -->
            <TextView
                android:id="@+id/task_header_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Today's Tasks"
                android:textColor="#702963"
                android:textSize="20sp" />

            <!-- Tasks List Card Container (Updated for Consistent Sizing and Padding) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tasks_card_container"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="12dp"
                android:background="#ffffff"
                android:elevation="2dp"
                android:paddingStart="8dp"
                android:paddingTop="16dp"
                android:paddingEnd="8dp"
                android:paddingBottom="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/task_header_text">

                <!-- Note: All CheckBoxes are chained vertically below. -->

                <!-- Tasks List (Checkboxes) -->
                <CheckBox
                    android:id="@+id/task1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:paddingStart="8dp"
                    android:text="Morning Standup Meeting"
                    android:textSize="15sp"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckBox
                    android:id="@+id/task2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:paddingStart="8dp"
                    android:text="Review Budget Report"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@id/task1" />

                <CheckBox
                    android:id="@+id/task3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:paddingStart="8dp"
                    android:text="Finalize Wireframe"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@id/task2" />

                <CheckBox
                    android:id="@+id/task4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:paddingStart="8dp"
                    android:text="Brainstrom Session"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@id/task3" />

                <CheckBox
                    android:id="@+id/task5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:paddingStart="8dp"
                    android:text="Send Progress Email"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@id/task4" />

                <CheckBox
                    android:id="@+id/task6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:paddingStart="8dp"
                    android:text="Project X Presentation"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@id/task5" />

                <CheckBox
                    android:id="@+id/task7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:paddingStart="8dp"
                    android:text="Dinner with Project Team"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@id/task6" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Recent Notes Header -->
            <TextView
                android:id="@+id/task_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Recent Notes"
                android:textColor="#702963"
                android:textSize="20sp" />

            <!-- Note Card 1: Team Meeting Agenda (Corrected for consistent layout) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/note_card_agenda"
                android:layout_width="353dp"
                android:layout_height="102dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="12dp"
                android:background="#E0E0E0"
                android:elevation="2dp"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <!-- 1. Icon -->
                <ImageView
                    android:id="@+id/note_icon"
                    android:layout_width="43dp"
                    android:layout_height="40dp"
                    android:contentDescription="Agenda Icon"
                    android:src="@drawable/agenda_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <!-- 2. Title -->
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Team Meeting Agenda"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/note_icon"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- 3. Description -->
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins"
                    android:text="Topics: project updates, deadlines, and task assignments."
                    android:textColor="#666666"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/textView3"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@id/textView3"
                    app:layout_constraintTop_toBottomOf="@id/textView3"
                    app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <!-- Note Card 2: Ideas for App Launch (Constraints Corrected) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/task_completed_launch"
                android:layout_width="353dp"
                android:layout_height="102dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="12dp"
                android:background="#E0E0E0"
                android:elevation="2dp"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <!-- 1. Icon -->
                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="43dp"
                    android:layout_height="41dp"
                    android:src="@drawable/idea_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <!-- 2. Title (textView5) -->
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Ideas for App Launch"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imageView5"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- 3. Description (textView6) -->
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins"
                    android:text="Brainstormed features, color scheme options, and app name ideas."
                    android:textColor="#666666"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/textView5"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@id/textView5"
                    app:layout_constraintTop_toBottomOf="@id/textView5"
                    app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Note Card 3: Client Feedback (Constraints Corrected) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/note_card_feedback"
                android:layout_width="353dp"
                android:layout_height="102dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="12dp"
                android:background="#E0E0E0"
                android:elevation="2dp"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <!-- 1. Icon -->
                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="46dp"
                    android:layout_height="40dp"
                    android:src="@drawable/feedback_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <!-- 2. Title (textView7) -->
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Client Feedback"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imageView6"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- 3. Description (textView8) -->
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins"
                    android:text="Client suggested simpler UI and clearer deadline tracking."
                    android:textColor="#666666"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/textView7"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@id/textView7"
                    app:layout_constraintTop_toBottomOf="@id/textView7"
                    app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footer_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Home -->
        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="Home"
            android:src="@drawable/home_logo"
            app:layout_constraintBottom_toTopOf="@id/home_text"
            app:layout_constraintEnd_toStartOf="@id/notes_icon"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Home"
            android:textColor="#702963"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/home_icon"
            app:layout_constraintStart_toStartOf="@id/home_icon"
            app:layout_constraintTop_toBottomOf="@id/home_icon" />

        <!-- Notes -->
        <ImageView
            android:id="@+id/notes_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="Notes"
            android:src="@drawable/notes_logo"
            app:layout_constraintBottom_toTopOf="@id/notes_text"
            app:layout_constraintEnd_toStartOf="@id/add_icon"
            app:layout_constraintStart_toEndOf="@id/home_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/notes_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Notes"
            android:textColor="#702963"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/notes_icon"
            app:layout_constraintStart_toStartOf="@id/notes_icon"
            app:layout_constraintTop_toBottomOf="@id/notes_icon" />

        <!-- Add (Center Floating Button) -->
        <ImageView
            android:id="@+id/add_icon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/circle_button"
            android:clickable="true"
            android:contentDescription="Add"
            android:src="@drawable/add_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/calendar_icon"
            app:layout_constraintStart_toEndOf="@id/notes_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Calendar -->

        <ImageView
            android:id="@+id/calendar_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="Calendar"
            android:src="@drawable/calendar_logo"
            app:layout_constraintBottom_toTopOf="@id/calendar_text"
            app:layout_constraintEnd_toStartOf="@id/settings_icon"
            app:layout_constraintStart_toEndOf="@id/add_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/calendar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Deadlines"
            android:textColor="#702963"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/calendar_icon"
            app:layout_constraintStart_toStartOf="@id/calendar_icon"
            app:layout_constraintTop_toBottomOf="@id/calendar_icon" />

        <!-- Settings -->
        <ImageView
            android:id="@+id/settings_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="Settings"
            android:src="@drawable/settings_logo"
            app:layout_constraintBottom_toTopOf="@id/settings_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/calendar_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/settings_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Settings"
            android:textColor="#702963"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/settings_icon"
            app:layout_constraintStart_toStartOf="@id/settings_icon"
            app:layout_constraintTop_toBottomOf="@id/settings_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
