<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <!-- Top App Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#F5F5F5"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Arrow Icon -->
        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back_arrow_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Add Note Title -->
        <TextView
            android:id="@+id/add_note_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Add Note"
            android:textColor="#702963"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />

        <!-- Description Text -->
        <TextView
            android:id="@+id/description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Capture quick thoughts or details you don't want to forget."
            android:textColor="#666666"
            android:textSize="14sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_note_title"
            app:layout_constraintVertical_bias="0.7" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Main Content Area -->
    <ScrollView
        android:id="@+id/main_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintBottom_toTopOf="@id/footer_layout"
        app:layout_constraintTop_toBottomOf="@id/app_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title Input Section -->
            <TextView
                android:id="@+id/title_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Title"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/title_input"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/input_field_background"
                android:fontFamily="@font/poppins"
                android:hint="e.g Meeting Notes"
                android:inputType="textCapSentences"
                android:padding="16dp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="16sp" />

            <!-- Content Input Section -->
            <TextView
                android:id="@+id/content_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Content"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/content_input"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/input_field_background"
                android:fontFamily="@font/poppins"
                android:gravity="top|start"
                android:hint="Write your note here..."
                android:inputType="textMultiLine|textCapSentences"
                android:padding="16dp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="16sp" />

            <!-- Add Note Button -->
            <Button
                android:id="@+id/add_note_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/add_note_button_background"
                android:fontFamily="@font/poppins_bold"
                android:text="Add Note"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>

    <!-- Footer Navigation Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footer_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/footer_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <!-- Home -->
        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="Home"
            android:src="@drawable/home_logo"
            app:layout_constraintBottom_toTopOf="@id/home_text"
            app:layout_constraintEnd_toStartOf="@id/notes_icon"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Home"
            android:textColor="#666666"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/home_icon"
            app:layout_constraintStart_toStartOf="@id/home_icon"
            app:layout_constraintTop_toBottomOf="@id/home_icon" />

        <!-- Notes -->
        <ImageView
            android:id="@+id/notes_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="Notes"
            android:src="@drawable/notes_logo"
            app:layout_constraintBottom_toTopOf="@id/notes_text"
            app:layout_constraintEnd_toStartOf="@id/add_icon"
            app:layout_constraintStart_toEndOf="@id/home_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/notes_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Notes"
            android:textColor="#666666"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/notes_icon"
            app:layout_constraintStart_toStartOf="@id/notes_icon"
            app:layout_constraintTop_toBottomOf="@id/notes_icon" />

        <!-- Add (Center Floating Button) -->
        <ImageView
            android:id="@+id/add_icon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/circle_button"
            android:clickable="true"
            android:contentDescription="Add"
            android:src="@drawable/add_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/calendar_icon"
            app:layout_constraintStart_toEndOf="@id/notes_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Calendar -->
        <ImageView
            android:id="@+id/calendar_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="Calendar"
            android:src="@drawable/calendar_logo"
            app:layout_constraintBottom_toTopOf="@id/calendar_text"
            app:layout_constraintEnd_toStartOf="@id/settings_icon"
            app:layout_constraintStart_toEndOf="@id/add_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/calendar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Deadlines"
            android:textColor="#666666"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/calendar_icon"
            app:layout_constraintStart_toStartOf="@id/calendar_icon"
            app:layout_constraintTop_toBottomOf="@id/calendar_icon" />

        <!-- Settings -->
        <ImageView
            android:id="@+id/settings_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="Settings"
            android:src="@drawable/settings_logo"
            app:layout_constraintBottom_toTopOf="@id/settings_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/calendar_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/settings_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Settings"
            android:textColor="#666666"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/settings_icon"
            app:layout_constraintStart_toStartOf="@id/settings_icon"
            app:layout_constraintTop_toBottomOf="@id/settings_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>