<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"> <!-- Main phone frame to light grey -->

    <!-- Status Bar Icons (Fixed at Top) -->
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="16dp"
        android:layout_height="17dp"
        android:src="@drawable/cellular_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="15dp"
        android:layout_height="17dp"
        android:src="@drawable/battery_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.959"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="16dp"
        android:layout_height="17dp"
        android:src="@drawable/wifi_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.901"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="42dp"
        android:layout_height="19dp"
        android:fontFamily="sans-serif"
        android:text="11:59"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <!-- Footer Layout (Fixed at Bottom) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footer_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Home -->
        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="Home"
            android:src="@drawable/home_logo"
            app:layout_constraintBottom_toTopOf="@id/home_text"
            app:layout_constraintEnd_toStartOf="@id/notes_icon"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Home"
            android:textColor="#702963"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/home_icon"
            app:layout_constraintStart_toStartOf="@id/home_icon"
            app:layout_constraintTop_toBottomOf="@id/home_icon" />

        <!-- Notes -->
        <ImageView
            android:id="@+id/notes_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="Notes"
            android:src="@drawable/notes_logo"
            app:layout_constraintBottom_toTopOf="@id/notes_text"
            app:layout_constraintEnd_toStartOf="@id/add_icon"
            app:layout_constraintStart_toEndOf="@id/home_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/notes_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Notes"
            android:textColor="#702963"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/notes_icon"
            app:layout_constraintStart_toStartOf="@id/notes_icon"
            app:layout_constraintTop_toBottomOf="@id/notes_icon" />

        <!-- Add (Center Floating Button) -->
        <ImageView
            android:id="@+id/add_icon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/circle_button"
            android:clickable="true"
            android:contentDescription="Add"
            android:src="@drawable/add_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/calendar_icon"
            app:layout_constraintStart_toEndOf="@id/notes_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Calendar -->
        <ImageView
            android:id="@+id/calendar_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="Calendar"
            android:src="@drawable/calendar_logo"
            app:layout_constraintBottom_toTopOf="@id/calendar_text"
            app:layout_constraintEnd_toStartOf="@id/settings_icon"
            app:layout_constraintStart_toEndOf="@id/add_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/calendar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Deadlines"
            android:textColor="#702963"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/calendar_icon"
            app:layout_constraintStart_toStartOf="@id/calendar_icon"
            app:layout_constraintTop_toBottomOf="@id/calendar_icon" />

        <!-- Settings -->
        <ImageView
            android:id="@+id/settings_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="Settings"
            android:src="@drawable/settings_logo"
            app:layout_constraintBottom_toTopOf="@id/settings_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/calendar_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/settings_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Settings"
            android:textColor="#702963"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/settings_icon"
            app:layout_constraintStart_toStartOf="@id/settings_icon"
            app:layout_constraintTop_toBottomOf="@id/settings_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable Content Area: Constrained between top status bar and fixed footer -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintBottom_toTopOf="@id/footer_layout">

        <!-- Inner LinearLayout to stack the title and the cards vertically -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="24dp"> <!-- Padding below the last card for spacing -->

            <TextView
                android:id="@+id/appname_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Settings"
                android:textColor="#702963"
                android:textSize="28sp" />

            <!-- Main Content Card (tasks_card_container) - NOW DYNAMIC HEIGHT -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tasks_card_container"
                android:layout_width="358dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="8dp"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <!-- All children are now constrained relative to each other (top-down) -->

                <!-- 1. Notifications Header -->
                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:src="@drawable/notification_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="0dp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notifications"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@id/imageView9"
                    app:layout_constraintTop_toTopOf="@id/imageView9"
                    app:layout_constraintBottom_toBottomOf="@id/imageView9" />

                <!-- 2. Description 1 -->
                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Control reminder permissions and your daily summary."
                    android:textColor="#888888"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/textView9"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- 3. Enable notifications label & switch -->
                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Enable notifications"
                    android:textColor="#333333"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/textView10"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/notifications_switch" />

                <Switch
                    android:id="@+id/notifications_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/textView11"
                    app:layout_constraintBottom_toBottomOf="@id/textView11" />

                <!-- 4. Description 2 -->
                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Allow this device to receive reminders."
                    android:textColor="#888888"
                    app:layout_constraintTop_toBottomOf="@id/textView11"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- 5. Grant permission (Interactive Button Area) -->
                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="201dp"
                    android:layout_height="38dp"
                    android:src="@drawable/rounded_textfield"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/textView12"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Grant permission"
                    android:textColor="#702963"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="@id/imageView18"
                    app:layout_constraintBottom_toBottomOf="@id/imageView18"
                    app:layout_constraintStart_toStartOf="@id/imageView18"
                    app:layout_constraintEnd_toEndOf="@id/imageView18"
                    android:layout_marginStart="16dp" />

                <!-- 6. Divider Line -->
                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/gradient_line"
                    app:layout_constraintTop_toBottomOf="@id/imageView18"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- 7. Daily Summary Header -->
                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily summary"
                    android:textColor="#333333"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/view3"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- 8. Description 3 -->
                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Get a daily overview at this time."
                    android:textColor="#888888"
                    app:layout_constraintTop_toBottomOf="@id/textView14"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- 9. Time Picker Area (Outline and Value) -->
                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="201dp"
                    android:layout_height="38dp"
                    android:src="@drawable/rounded_textfield"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/textView16"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/time_icon"
                    app:layout_constraintTop_toTopOf="@id/imageView16"
                    app:layout_constraintBottom_toBottomOf="@id/imageView16"
                    app:layout_constraintStart_toStartOf="@id/imageView16"
                    android:layout_marginStart="8dp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="09:00 am"
                    android:textColor="#333333"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@id/imageView16"
                    app:layout_constraintBottom_toBottomOf="@id/imageView16"
                    app:layout_constraintStart_toEndOf="@id/imageView10"
                    app:layout_constraintEnd_toEndOf="@id/imageView16" />

                <!-- 10. Snooze Duration Header -->
                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Snooze duration (minutes)"
                    android:textColor="#333333"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/imageView16"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- 11. Snooze Value Area (Outline and Value) -->
                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="175dp"
                    android:layout_height="36dp"
                    android:src="@drawable/rounded_textfield"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/textView17"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="5"
                    android:textColor="#333333"
                    app:layout_constraintTop_toTopOf="@id/imageView15"
                    app:layout_constraintBottom_toBottomOf="@id/imageView15"
                    app:layout_constraintStart_toStartOf="@id/imageView15"
                    app:layout_constraintEnd_toStartOf="@id/imageView11"
                    android:layout_marginStart="16dp" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="14dp"
                    android:layout_height="11dp"
                    android:src="@drawable/arrow_up_icon"
                    app:layout_constraintEnd_toEndOf="@id/imageView15"
                    app:layout_constraintTop_toTopOf="@id/imageView15"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="14dp"
                    android:layout_height="11dp"
                    android:src="@drawable/arrow_down_icon"
                    app:layout_constraintEnd_toEndOf="@id/imageView15"
                    app:layout_constraintBottom_toBottomOf="@id/imageView15"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="8dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- New: Appearance Card Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/appearance_card_container"
                android:layout_width="358dp"
                android:layout_height="271dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">


                <TextView
                    android:id="@+id/appearance_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Appearance"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.095"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.018" />

                <TextView
                    android:id="@+id/appearance_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Choose your theme"
                    android:textColor="#888888"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/appearance_title" />

                <!-- Placeholder content for Appearance settings -->

                <TextView
                    android:id="@+id/appearance_desc2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Switch between light and dark"
                    android:textColor="#888888"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.422" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="277dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="20dp"
                    android:text="Dark Mode"
                    android:textColor="#333333"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/appearance_desc" />

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/brightness_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.018" />

                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:src="@drawable/rounded_textfield"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.635" />

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="130dp"
                    android:layout_height="34dp"
                    android:src="@drawable/rounded_textfield"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.852"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.629" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dark"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.778"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.595" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="light"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/imageView20"
                    app:layout_constraintHorizontal_bias="0.689"
                    app:layout_constraintStart_toStartOf="@+id/imageView20"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.595" />

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/light_mode_icon"
                    tools:layout_editor_absoluteX="23dp"
                    tools:layout_editor_absoluteY="144dp" />

                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dark_mode_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.641"
                    tools:layout_editor_absoluteX="196dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
